<Page x:Class="MarathonSkills.WpfApp.Pages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkills.WpfApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="285" d:DesignWidth="800"
      Title="MainMenuPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Я хочу стать бегуном" Style="{DynamicResource BigButton}" Click="RunnerRegister_Click"  Margin="0 0 0 10"/>
            <Button Content="Я хочу стать спонсором бегуна" Style="{DynamicResource BigButton}" Margin="0 0 0 10" Click="BeRunnerSponsor_Click"/>
            <Button Content="Я хочу узнать больше о событии" Style="{DynamicResource BigButton}" Click="GetMoreInfo_Click"/>
        </StackPanel>
        <Button Content="Войти" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="85" Margin="0 0 15 15" Style="{DynamicResource SmallButton}"
                Click="Authorize_Click"/>
    </Grid>
</Page>
