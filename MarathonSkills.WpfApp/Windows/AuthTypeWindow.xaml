<Window x:Class="MarathonSkills.WpfApp.Windows.AuthTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarathonSkills.WpfApp.Windows"
        mc:Ignorable="d"
        Title="Выберите тип аккаунта" Height="300" Width="440" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
		Closing="Window_Closing">
	<Grid>
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
			<Label Content="ТОЛЬКО ДЛЯ ТЕСТИРОВАНИЯ!" FontSize="18" FontWeight="Bold" FontStyle="Italic" Foreground="#BF9000" HorizontalAlignment="Center"/>
			<Label Content="Под каким пользователем вы хотите&#xD;&#xA;                  войти в систему?" FontSize="14" HorizontalAlignment="Center"/>
			<Button Content="Бегун" Width="130" Height="30" Style="{DynamicResource SmallButton}" Margin="0 22 0 7" Click="RunnerButton_Click"/>
			<Button Content="Координатор" Width="130" Height="30" Style="{DynamicResource SmallButton}" Margin="0 7" Click="CoordinatorButton_Click"/>
			<Button Content="Администратор" Width="130" Height="30" Style="{DynamicResource SmallButton}" Margin="0 7" Click="AdministratorButton_Click"/>
		</StackPanel>
	</Grid>
</Window>
